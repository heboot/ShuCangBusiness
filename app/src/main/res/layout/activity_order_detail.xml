<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <include
            android:id="@+id/include_toolbar"
            layout="@layout/layout_toolbar"
            android:layout_width="0dp"
            android:layout_height="@dimen/y60"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></include>

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:layout_constraintBottom_toTopOf="@+id/tv_pay"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_top"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/y90"
                    android:background="@mipmap/bg_order_top"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_status_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x50"
                    android:layout_marginTop="@dimen/y30"
                    android:text="配送中"
                    android:textColor="#fff"
                    android:textSize="@dimen/x20"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <include
                    android:id="@+id/include_progress"
                    layout="@layout/layout_order_progress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y83"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></include>

                <View
                    android:id="@+id/v_line1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/y2"
                    android:background="@mipmap/bg_order_detail_line"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/include_progress"></View>

                <ImageView
                    android:layout_width="@dimen/x10"
                    android:layout_height="@dimen/y13"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_marginTop="@dimen/y27"
                    android:background="@mipmap/icon_address"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_line1" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x36"
                    android:layout_marginTop="@dimen/y17"
                    android:text="张三      12365444455"
                    android:textColor="#969595"
                    android:textSize="@dimen/x14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_line1" />

                <TextView
                    android:id="@+id/tv_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x36"
                    android:layout_marginTop="@dimen/y42"
                    android:text="成都锦江区天府广场大业路1457号"
                    android:textColor="#969595"
                    android:textSize="@dimen/x14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_line1" />

                <TextView
                    android:id="@+id/tv_alter_address"
                    android:layout_width="@dimen/x50"
                    android:layout_height="0dp"
                    android:layout_marginRight="@dimen/x28"
                    android:gravity="center"
                    android:text="更换地址"
                    android:textColor="#ffacacac"
                    android:textSize="@dimen/x12"
                    app:layout_constraintBottom_toTopOf="@+id/v_line2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_line1" />

                <View
                    android:layout_width="@dimen/x9"
                    android:layout_height="@dimen/y15"
                    android:layout_marginRight="@dimen/x16"
                    android:background="@mipmap/icon_arrow_right"
                    app:layout_constraintBottom_toTopOf="@+id/v_line2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_line1"></View>

                <View
                    android:id="@+id/v_line2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/y2"
                    android:layout_marginTop="@dimen/y15"
                    android:background="@mipmap/bg_order_detail_line"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_addr"></View>

                <com.zh.business.shucang.view.PayTypesView
                    android:id="@+id/include_paytype"
                    layout="@layout/layout_pay_types"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_line2"></com.zh.business.shucang.view.PayTypesView>


                <TextView
                    android:id="@+id/tv_goods_list"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/x17"
                    android:gravity="center_vertical"
                    android:text="商品清单"
                    android:textColor="#2F2F2F"
                    android:textSize="@dimen/x15"
                    app:layout_constraintBottom_toTopOf="@+id/v_line3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/include_paytype" />

                <View
                    android:id="@+id/v_line3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/y1"
                    android:layout_marginTop="@dimen/y47"
                    android:background="#ffe4e4e7"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/include_paytype"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x36"
                    android:text="查看"
                    android:textColor="#53BBDE"
                    android:textSize="@dimen/x14"
                    app:layout_constraintBottom_toTopOf="@+id/v_line3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/include_paytype" />

                <View
                    android:id="@+id/v_arrow"
                    android:layout_width="@dimen/x15"
                    android:layout_height="@dimen/y9"
                    android:layout_marginRight="@dimen/x16"
                    android:background="@mipmap/icon_arrow_down"
                    app:layout_constraintBottom_toTopOf="@+id/v_line3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/include_paytype"></View>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_line3"></androidx.recyclerview.widget.RecyclerView>


                <View
                    android:id="@+id/v_line4"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/y10"
                    android:background="#f7f7f7"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
