                    <!--app:layout_constraintRight_toRightOf="parent"-->
                    <!--app:layout_constraintTop_toBottomOf="@+id/v_line4"></View>-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_marginTop="@dimen/y13"
                    android:text="买家留言"
                    android:textColor="#747474"
                    android:textSize="@dimen/x12"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_line4" />


                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_marginTop="@dimen/y33"
                    android:text="我觉得非常好"
                    android:textColor="#747474"
                    android:textSize="@dimen/x12"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_line4" />

                <View
                    android:id="@+id/v_line6"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/y10"
                    android:layout_marginTop="@dimen/y15"
                    android:background="#f7f7f7"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_comment"></View>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y14"
                    android:layout_marginRight="@dimen/x16"
                    android:text="¥111.00"
                    android:textColor="#FE454D"
                    android:textSize="@dimen/x14"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_line6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y14"
                    android:text="折后金额："
                    android:textColor="#1B1B1B"
