<?xml version="1.0" encoding="utf-8"?>

<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></androidx.recyclerview.widget.RecyclerView>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:text="总金额"
            android:textColor="#212121"
            android:textSize="@dimen/x14"
            app:layout_constraintBottom_toTopOf="@+id/v1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_list" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x60"
            android:text="5000"
            android:textColor="#D71B43"
            android:textSize="@dimen/x14"
            app:layout_constraintBottom_toTopOf="@+id/v1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_list" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:layout_marginRight="@dimen/x17"
            android:text="等待付款"
            android:textColor="#D71B43"
            android:textSize="@dimen/x12"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x83"
            android:background="@drawable/bg_c3c3c3_border"
            android:padding="@dimen/x6"
            android:text="取消订单"
            android:textColor="#8D8D8D"
            android:textSize="@dimen/x12"
            app:layout_constraintBottom_toTopOf="@+id/v1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_list" />

        <TextView
            android:id="@+id/tv_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x16"
            android:background="@drawable/bg_ee4267_border"
            android:padding="@dimen/x6"
            android:text="去付款"
            android:textColor="#EE4267"
            android:textSize="@dimen/x12"
            app:layout_constraintBottom_toTopOf="@+id/v1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_list" />


        <View
            android:id="@+id/v1"
            android:layout_width="0dp"
            android:layout_height="@dimen/y10"
            android:layout_marginTop="@dimen/y45"
            android:background="#E4E4E7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_list"></View>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>