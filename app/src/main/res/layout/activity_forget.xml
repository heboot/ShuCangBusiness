<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <include
            android:id="@+id/include_toolbar"
            layout="@layout/layout_toolbar"
            android:layout_width="0dp"
            android:layout_height="@dimen/y60"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></include>

        <View
            android:id="@+id/v1"
            android:layout_width="0dp"
            android:layout_height="@dimen/y10"
            android:background="#F7F7F9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar"></View>

        <View
            android:id="@+id/v_line"
            android:layout_width="0dp"
            android:layout_height="@dimen/y1"
            android:background="#e0dede"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v1"></View>


        <ImageView
            android:id="@+id/iv_mobile"
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/y18"
            android:layout_marginLeft="@dimen/x17"
            android:layout_marginTop="@dimen/y18"
            android:background="@mipmap/icon_mobile"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_line" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x13"
            android:background="@null"
            android:hint="请输入您注册的手机号码"
            android:inputType="number"
            android:textColor="#6B6B6B"
            android:textSize="@dimen/x15"
            app:layout_constraintBottom_toBottomOf="@+id/iv_mobile"
            app:layout_constraintLeft_toRightOf="@+id/iv_mobile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_mobile" />

        <View
            android:id="@+id/v_line2"
            android:layout_width="0dp"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/y15"
            android:background="#e0dede"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_phone"></View>


        <ImageView
            android:id="@+id/iv_vcode"
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/y17"
            android:layout_marginLeft="@dimen/x17"
            android:layout_marginTop="@dimen/y18"
            android:background="@mipmap/icon_pwd"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_line2" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x13"
            android:layout_marginRight="@dimen/x10"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColor="#6B6B6B"
            android:textSize="@dimen/x15"
            app:layout_constraintBottom_toBottomOf="@+id/iv_vcode"
            app:layout_constraintLeft_toRightOf="@+id/iv_vcode"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_vcode" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginRight="@dimen/x16"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#D71B43"
            android:textSize="@dimen/x12"
            app:layout_constraintBottom_toBottomOf="@+id/v_line4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_line2" />


        <View
            android:id="@+id/v_line4"
            android:layout_width="0dp"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x45"
            android:layout_marginTop="@dimen/y15"
            android:background="#e0dede"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_code"></View>


        <ImageView
            android:id="@+id/iv_pwd"
            android:layout_width="@dimen/x14"
            android:layout_height="@dimen/y16"
            android:layout_marginLeft="@dimen/x17"
            android:layout_marginTop="@dimen/y18"
            android:background="@mipmap/icon_pwd_register"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_line4" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x13"
            android:background="@null"
            android:hint="请设置您的新密码"
            android:inputType="textPassword"
            android:textColor="#6B6B6B"
            android:textSize="@dimen/x15"
            app:layout_constraintBottom_toBottomOf="@+id/iv_pwd"
            app:layout_constraintLeft_toRightOf="@+id/iv_pwd"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_pwd" />

        <View
            android:id="@+id/v_line12"
            android:layout_width="0dp"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/y15"
            android:background="#e0dede"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_pwd"></View>


        <ImageView
            android:id="@+id/iv_confirm_pwd"
            android:layout_width="@dimen/x16"
            android:layout_height="@dimen/y16"
            android:layout_marginLeft="@dimen/x17"
            android:layout_marginTop="@dimen/y18"
            android:background="@mipmap/icon_reset_pwd"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_line12" />

        <EditText
            android:id="@+id/et_confirm_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x13"
            android:layout_marginRight="@dimen/x10"
            android:background="@null"
            android:hint="请再次输入您的新密码"
            android:inputType="textPassword"
            android:textColor="#6B6B6B"
            android:textSize="@dimen/x15"
            app:layout_constraintBottom_toBottomOf="@+id/iv_confirm_pwd"
            app:layout_constraintLeft_toRightOf="@+id/iv_confirm_pwd"
            app:layout_constraintRight_toLeftOf="@+id/switch_showpwd"
            app:layout_constraintTop_toTopOf="@+id/iv_confirm_pwd" />

        <View
            android:id="@+id/v_line13"
            android:layout_width="0dp"
            android:layout_height="@dimen/y1"
            android:layout_marginTop="@dimen/y15"
            android:background="#e0dede"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_confirm_pwd"></View>

        <TextView
            android:id="@+id/switch_showpwd"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/y20"
            android:layout_marginRight="@dimen/x16"
            android:background="@mipmap/icon_show_pwd_red"
            android:showText="true"
            android:textOff="abc"
            android:textOn="on"
            app:layout_constraintBottom_toTopOf="@+id/v_line13"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_line12" />


        <TextView
            android:layout_width="@dimen/x250"
            android:layout_height="@dimen/y35"
            android:layout_marginTop="@dimen/y80"
            android:background="@drawable/bg_d71b43_5"
            android:gravity="center"
            android:text="下一步"
            android:textColor="#fff"
            android:textSize="@dimen/x12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_line13" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>