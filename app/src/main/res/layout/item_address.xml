<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/y1"
            android:background="#e4e4e7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></View>


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="@dimen/y15"
            android:text="何青椒"
            android:textColor="#313030"
            android:textSize="@dimen/x13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x25"
            android:layout_marginTop="@dimen/y15"
            android:text="1354652222"
            android:textColor="#313030"
            android:textSize="@dimen/x13"
            app:layout_constraintLeft_toRightOf="@+id/tv_name"

            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tv_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="@dimen/y45"
            android:text=""
            android:textColor="#313030"
            android:textSize="@dimen/x13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v1"
            android:layout_width="0dp"
            android:layout_height="@dimen/y1"
            android:layout_marginTop="@dimen/y15"
            android:background="#e4e4e7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_addr"></View>

        <CheckBox
            android:id="@+id/cb_check"
            android:layout_width="@dimen/x14"
            android:layout_height="@dimen/x14"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="@dimen/y13"
            android:button="@null"
            android:background="@drawable/selector_check_red"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v1" />

        <TextView
            android:id="@+id/tv_normal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x10"
            android:text="默认地址"
            android:textColor="#7F7F7F"
            android:textSize="@dimen/x12"
            app:layout_constraintBottom_toTopOf="@+id/v2"
            app:layout_constraintLeft_toRightOf="@+id/cb_check"
            app:layout_constraintTop_toTopOf="@+id/v1" />

        <TextView
            android:id="@+id/tv_alter"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_marginRight="@dimen/x16"
            android:text="修改"
            android:textColor="#5D5D5D"
            android:textSize="@dimen/x12"
            app:layout_constraintBottom_toTopOf="@+id/v2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/v1" />

        <ImageView
            android:layout_width="@dimen/x10"
            android:layout_height="@dimen/y11"
            android:layout_marginRight="@dimen/x5"
            android:background="@mipmap/icon_alter"
            app:layout_constraintBottom_toBottomOf="@+id/tv_alter"
            app:layout_constraintRight_toLeftOf="@+id/tv_alter"
            app:layout_constraintTop_toTopOf="@+id/tv_alter" />

        <TextView
            android:gravity="center"
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginRight="@dimen/x52"
            android:text="删除"
            android:textColor="#5D5D5D"
            android:textSize="@dimen/x12"
            app:layout_constraintBottom_toTopOf="@+id/v2"
            app:layout_constraintRight_toLeftOf="@+id/tv_alter"
            app:layout_constraintTop_toTopOf="@+id/v1" />

        <ImageView
            android:layout_width="@dimen/x10"
            android:layout_height="@dimen/y11"
            android:layout_marginRight="@dimen/x80"
            android:background="@mipmap/icon_laji"
            app:layout_constraintBottom_toBottomOf="@+id/tv_alter"
            app:layout_constraintRight_toLeftOf="@+id/tv_alter"
            app:layout_constraintTop_toTopOf="@+id/tv_alter" />

        <View
            android:id="@+id/v2"
            android:layout_marginTop="@dimen/y40"
            app:layout_constraintTop_toBottomOf="@+id/v1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#ffefefef"
            android:layout_width="0dp"
            android:layout_height="@dimen/y10"></View>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>