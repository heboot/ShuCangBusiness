<?xml version="1.0" encoding="utf-8"?>

<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">


        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80"
            android:layout_marginLeft="@dimen/x10"
            android:background="@mipmap/test_goods_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:text="瓷砖地砖客厅卫生间真石全抛半"
            android:textColor="#212121"
            android:textSize="@dimen/x12"
            app:layout_constraintLeft_toRightOf="@+id/iv_img"
            app:layout_constraintTop_toTopOf="@+id/iv_img" />


        <TextView
            android:id="@+id/tv_ziying"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/y16"
            android:layout_marginTop="@dimen/y10"
            android:background="@drawable/bg_d71b43_5"
            android:gravity="center"
            android:text="自营"
            android:textColor="#fff"
            android:textSize="@dimen/x10"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />


        <TextView
            android:id="@+id/tv_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x6"
            android:text="销量"
            android:textColor="#A0A0A0"
            android:textSize="@dimen/x10"
            app:layout_constraintBottom_toBottomOf="@+id/tv_ziying"
            app:layout_constraintLeft_toRightOf="@+id/tv_ziying"
            app:layout_constraintTop_toTopOf="@+id/tv_ziying" />

        <TextView
            android:id="@+id/tv_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:text="库存"
            android:textColor="#A0A0A0"
            android:textSize="@dimen/x10"
            app:layout_constraintBottom_toBottomOf="@+id/tv_ziying"
            app:layout_constraintLeft_toRightOf="@+id/tv_sale"
            app:layout_constraintTop_toTopOf="@+id/tv_ziying" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:text="55.00"
            android:textColor="#FD4479"
            android:textSize="@dimen/x14"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_ziying" />

        <TextView
            android:id="@+id/tv_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x8"
            android:textColor="#ABABAB"
            android:textSize="@dimen/x11"
            app:layout_constraintBottom_toBottomOf="@+id/tv_ziying"
            app:layout_constraintLeft_toRightOf="@+id/tv_ziying"
            app:layout_constraintTop_toTopOf="@+id/tv_ziying" />

        <TextView
            android:id="@+id/tv_num_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x17"
            android:textColor="#ABABAB"
            android:textSize="@dimen/x11"
            app:layout_constraintBottom_toBottomOf="@+id/tv_spec"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_spec" />

        <View
            android:layout_width="@dimen/x14"
            android:layout_height="@dimen/y14"
            android:layout_marginRight="@dimen/x16"
            android:background="@mipmap/icon_laji"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/v_jia"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/v_jia"></View>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/y1"
            android:background="#E4E4E7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title"
            app:layout_constraintRight_toRightOf="parent"></View>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>