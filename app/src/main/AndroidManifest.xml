    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <application
        android:name=".MAPP"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.index.IndexActivity"></activity>

        <activity android:name=".activity.goods.GoodsListActivity"></activity>

        <activity android:name=".activity.user.InfoActivity"></activity>

        <activity android:name=".activity.user.AddAddressActivity"></activity>

        <activity android:name=".activity.user.AddressListActivity"></activity>

        <activity android:name=".activity.user.FavActivity"></activity>

        <activity android:name=".activity.user.HTMLActivity"></activity>

        <activity android:name=".activity.user.SettingActivity"></activity>

        <activity android:name=".activity.goods.GoodsDetailActivity"></activity>

        <activity android:name=".activity.order.MyOrderActivity"></activity>

        <activity android:name=".activity.login.LoginActivity"></activity>

        <activity android:name=".activity.login.RegisterActivity"></activity>
    </application>

</manifest>